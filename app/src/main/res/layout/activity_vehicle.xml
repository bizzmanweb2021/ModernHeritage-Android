<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_20sdp"
        android:paddingHorizontal="@dimen/_12sdp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/backarrow" />

        <TextView
            android:id="@+id/tvDelivery"
            style="@style/tvRegular"
            android:layout_centerHorizontal="true"
            android:text="@string/vehicle"
            android:textColor="@color/darkBlue"
            android:textSize="@dimen/_14sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_below="@+id/tvDelivery"
            android:background="@color/yellow"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:src="@drawable/bike_rect"/>

            <TextView
                style="@style/tvSemiBold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/darkBlue"
                android:text="Honda Scooty"/>

            <TextView
                style="@style/tvRegular"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:textColor="@color/darkBlue"
                android:text="SP-01144"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_20sdp"
                android:background="@drawable/rectangle_back"
                android:orientation="vertical">

                <TextView
                    style="@style/tvRegular"
                    android:text="Color - Red"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:textColor="@color/darkBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/tvRegular"
                    android:text="Wheeler - 2"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:textColor="@color/darkBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/tvRegular"
                    android:text="Driver - Rask Gomes"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:textColor="@color/darkBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/tvRegular"
                    android:text="Age - 25"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:textColor="@color/darkBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <TextView
                android:id="@+id/butGetStart"
                android:layout_width="@dimen/_200sdp"
                style="@style/customButton"
                android:text="@string/view_details"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_18sdp"
                android:background="@drawable/round_rectangle"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>